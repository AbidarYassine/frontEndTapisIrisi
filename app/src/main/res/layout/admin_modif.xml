<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="624dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/view5"
        tools:layout_editor_absoluteX="-3dp">


        <LinearLayout
            android:layout_width="376dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/modifLibelle"
                android:layout_width="160dp"
                android:layout_height="41dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="30dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <Button
                android:id="@+id/enrgModifs"
                android:layout_width="129dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#1AC4DA"

                android:gravity="center"
                android:text="Enregistrer"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageModif"
                android:layout_width="157dp"
                android:layout_height="89dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher_background" />

            <Button
                android:id="@+id/buttonImageChange"
                android:layout_width="193dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="52dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#EFA314"
                android:gravity="center"
                android:text="Modifier l'image"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="357dp"
            android:layout_height="437dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/propModidlv"
                android:layout_width="match_parent"
                android:layout_height="405dp"></ListView>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/txt3"
        android:layout_width="348dp"
        android:layout_height="75dp"
        android:padding="20dp"
        android:text="Modifier Motif:"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />


    <View
        android:id="@+id/view5"
        android:layout_width="420dp"
        android:layout_height="90dp"
        android:background="@drawable/admin_shape1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
